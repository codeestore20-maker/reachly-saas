# Environment Configuration
NODE_ENV=production

# Server
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=https://your-app.railway.app

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis
REDIS_URL=redis://default:password@host:6379

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-jwt-secret-here

# Cookie Encryption Key (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
COOKIE_ENCRYPTION_KEY=your-encryption-key-here

# Old Encryption Keys (optional - for backward compatibility after key rotation)
# Comma-separated list of old keys
OLD_ENCRYPTION_KEYS=old_key_1,old_key_2
